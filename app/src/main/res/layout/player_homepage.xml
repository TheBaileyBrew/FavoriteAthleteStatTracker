<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/player_home_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textSize="36dp"
        android:textStyle="bold"
        android:text="PLAYER DETAILS"/>

    <ImageSwitcher
        android:id="@+id/player_headshot_imageswitcher"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/player_home_header_text">
        <ImageView
            android:id="@+id/player_headshot_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stafford_headshot"
            android:scaleType="centerInside"/>
    </ImageSwitcher>

    <TextView
        android:id="@+id/player_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/player_headshot_imageswitcher"
        android:layout_below="@id/player_home_header_text"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_half_margin"
        android:gravity="center"
        android:textSize="26dp"
        android:textStyle="bold"
        android:text="Matthew Stafford"/>

    <TextView
        android:id="@+id/player_position_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/player_headshot_imageswitcher"
        android:layout_below="@id/player_name_textview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_half_margin"
        android:gravity="center"
        android:textSize="22dp"
        android:textStyle="italic"
        android:text="Quarterback"/>

    <TextView
        android:id="@+id/player_team_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/player_headshot_imageswitcher"
        android:layout_below="@id/player_position_textview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_half_margin"
        android:gravity="center"
        android:textSize="22dp"
        android:textStyle="italic"
        android:text="Detroit Lions"/>

    <TextView
        android:id="@+id/player_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/player_headshot_imageswitcher"
        android:gravity="center"
        android:text="PLAYER STATISTICS"/>

    <ListView
        android:id="@+id/current_player_listview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/player_stats">
    </ListView>

    <Button
        android:id="@+id/add_new_players"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/current_player_listview"
        android:text="ADD NEW PLAYER"/>





</RelativeLayout>