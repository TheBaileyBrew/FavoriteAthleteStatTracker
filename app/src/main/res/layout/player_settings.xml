<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/player_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textSize="@dimen/large_formatted_text_size_36sp"
        android:textStyle="bold"
        android:text="@string/modify_player_roster"/>
    <TextView
        android:id="@+id/player_settings_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/large_formatted_text_size_32sp"
        android:layout_below="@id/player_settings"
        android:textStyle="bold"
        android:text="@string/coming_soon"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_view"
        android:layout_width="match_parent"
        android:layout_below="@id/player_settings_two"
        android:layout_marginBottom="60dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>