<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#55000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/reset_all_scores"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_double_margin"
        android:layout_marginRight="@dimen/activity_horizontal_double_margin"
        android:layout_below="@id/game_scoring"
        android:textColor="@color/colorPrimaryRipple"
        android:textSize="@dimen/large_formatted_text_size_36sp"
        android:text="RESET SCORES"/>

    <View
        android:id="@+id/scoring_view_break_teams"
        android:background="@color/colorPrimary"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_marginBottom="50dp"
        android:layout_below="@id/reset_all_scores"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/game_scoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_half_margin"
        android:gravity="center"
        android:textSize="@dimen/standard_display_text_size_24sp"
        android:textStyle="bold"
        android:text="SCORE A GAME"/>

    <TextView
        android:id="@+id/home_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"
        android:layout_below="@id/game_scoring"
        android:textSize="@dimen/tablet_scoring_title_42sp"
        android:textColor="@color/colorPrimaryRipple"
        android:text="HOME TEAM"
        />

    <TextView
        android:id="@+id/away_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/game_scoring"
        android:textSize="@dimen/tablet_scoring_title_42sp"
        android:textColor="@color/colorPrimaryRipple"
        android:text="AWAY TEAM"
        />

    <TextView
        android:id="@+id/home_team_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignLeft="@id/home_team_name"
        android:layout_alignRight="@id/home_team_name"
        android:gravity="center_horizontal"
        android:layout_below="@id/home_team_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="70sp"
        android:text="888"/>
    <TextView
        android:id="@+id/home_team_total_score_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignLeft="@id/home_team_name"
        android:layout_alignRight="@id/home_team_name"
        android:gravity="center_horizontal"
        android:layout_below="@id/home_team_name"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:text=" "/>

    <TextView
        android:id="@+id/away_team_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignLeft="@id/away_team_name"
        android:layout_alignRight="@id/away_team_name"
        android:gravity="center_horizontal"
        android:layout_below="@id/away_team_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="70sp"
        android:text="888"/>
    <TextView
        android:id="@+id/away_team_total_score_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignLeft="@id/away_team_name"
        android:layout_alignRight="@id/away_team_name"
        android:gravity="center_horizontal"
        android:layout_below="@id/away_team_name"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        android:text=""/>

    <TextView
        android:id="@+id/home_team_td_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/home_team_name"
        android:layout_alignRight="@id/home_team_name"
        android:layout_below="@id/home_team_total_score"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="TOUCHDOWNS"/>

    <LinearLayout
        android:id="@+id/home_team_add_td_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/home_team_name"
        android:layout_alignLeft="@id/home_team_name"
        android:layout_below="@id/home_team_td_header">
        <Button
            android:id="@+id/home_team_add_td_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:theme="@style/BorderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6"/>
        <TextView
            android:id="@+id/home_team_td"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
        android:id="@+id/away_team_td_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/away_team_name"
        android:layout_alignRight="@id/away_team_name"
        android:layout_below="@id/away_team_total_score"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="TOUCHDOWNS"/>

    <LinearLayout
        android:id="@+id/away_team_add_td_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/away_team_name"
        android:layout_alignLeft="@id/away_team_name"
        android:layout_below="@id/away_team_td_header">
        <Button
            android:id="@+id/away_team_add_td_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+6"/>
        <TextView
            android:id="@+id/away_team_td"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
        android:id="@+id/home_team_fg_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/home_team_total_score_display"
        android:layout_alignRight="@id/scoring_view_break_teams"
        android:layout_toRightOf="@id/home_team_td_header"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="FIELDGOALS"/>

    <LinearLayout
        android:id="@+id/home_team_add_fg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/home_team_fg_header"
        android:layout_alignLeft="@id/home_team_fg_header"
        android:layout_below="@id/home_team_fg_header">
        <Button
            android:id="@+id/home_team_add_fg_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+3"/>
        <TextView
            android:id="@+id/home_team_fg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
        android:id="@+id/away_team_fg_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/scoring_view_break_teams"
        android:layout_toLeftOf="@id/away_team_td_header"
        android:layout_below="@id/away_team_total_score_display"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="FIELDGOALS"/>

    <LinearLayout
        android:id="@+id/away_team_add_fg_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/away_team_fg_header"
        android:layout_alignLeft="@id/away_team_fg_header"
        android:layout_below="@id/away_team_fg_header">
        <Button
            android:id="@+id/away_team_add_fg_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+3"/>
        <TextView
            android:id="@+id/away_team_fg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
    android:id="@+id/home_team_two_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_alignLeft="@id/home_team_name"
    android:layout_alignRight="@id/home_team_name"
    android:layout_below="@id/home_team_add_fg_layout"
    android:gravity="center_horizontal"
    android:textSize="@dimen/standard_text_size_26sp"
    android:text="safety / conv"/>

    <LinearLayout
        android:id="@+id/home_team_add_two_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/home_team_name"
        android:layout_alignLeft="@id/home_team_name"
        android:layout_below="@id/home_team_two_header">
        <Button
            android:id="@+id/home_team_add_two_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+2"/>
        <TextView
            android:id="@+id/home_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
        android:id="@+id/away_team_two_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/away_team_name"
        android:layout_alignRight="@id/away_team_name"
        android:layout_below="@id/away_team_add_fg_layout"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="safety / conv"/>

    <LinearLayout
        android:id="@+id/away_team_add_two_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/away_team_name"
        android:layout_alignLeft="@id/away_team_name"
        android:layout_below="@id/home_team_two_header">
        <Button
            android:id="@+id/away_team_add_two_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+2"/>
        <TextView
            android:id="@+id/away_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
        android:id="@+id/home_team_extra_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/home_team_fg_header"
        android:layout_alignRight="@id/home_team_fg_header"
        android:layout_below="@id/home_team_add_fg_layout"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="extra point"/>

    <LinearLayout
        android:id="@+id/home_team_add_extra_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/home_team_fg_header"
        android:layout_alignLeft="@id/home_team_fg_header"
        android:layout_below="@id/home_team_extra_header">
        <Button
            android:id="@+id/home_team_add_extra_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+1"/>
        <TextView
            android:id="@+id/home_team_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>

    <TextView
        android:id="@+id/away_team_extra_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignLeft="@id/away_team_fg_header"
        android:layout_alignRight="@id/away_team_fg_header"
        android:layout_below="@id/away_team_add_fg_layout"
        android:gravity="center_horizontal"
        android:textSize="@dimen/standard_text_size_26sp"
        android:text="extra point"/>

    <LinearLayout
        android:id="@+id/away_team_add_extra_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_half_margin"
        android:layout_alignRight="@id/away_team_fg_header"
        android:layout_alignLeft="@id/away_team_fg_header"
        android:layout_below="@id/home_team_extra_header">
        <Button
            android:id="@+id/away_team_add_extra_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/BorderlessButton"
            android:text="+1"/>
        <TextView
            android:id="@+id/away_team_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/digital7"
            android:textSize="@dimen/large_formatted_text_size_36sp"
            android:text="888"/>
    </LinearLayout>





</RelativeLayout>